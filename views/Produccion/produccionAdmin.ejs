<!doctype html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Mundi Novi 2024</title>
    <link rel="icon" href="img/logoColor.png" type="image/png">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
    <!-- MDB -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/7.3.2/mdb.min.css" rel="stylesheet" />

    <link rel="stylesheet" href="https://cdn.datatables.net/2.1.6/css/dataTables.dataTables.css" />

</head>

<body>
    <header>
        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg navbar-light bg-body-tertiary">
            <!-- Container wrapper -->
            <div class="container-fluid">
                <!-- Toggle button -->
                <button data-mdb-collapse-init class="navbar-toggler" type="button"
                    data-mdb-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                    <i class="fas fa-bars"></i>
                </button>

                <!-- Collapsible wrapper -->
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <!-- Navbar brand -->
                    <a class="navbar-brand mt-2 mt-lg-0" href="/main">
                        <img src="img/logoColor.png" height="45" alt="MDB Logo" loading="lazy" />
                    </a>
                    <!-- Left links -->
                    <ul id="options" class="navbar-nav me-auto mb-2 mb-lg-0">

                    </ul>
                    <!-- Left links -->
                </div>
                <!-- Collapsible wrapper -->

                <!-- Right elements -->
                <div class="d-flex align-items-center">
                    <!-- Avatar -->

                    <div class="info"
                        style="display: flex; flex-direction: column; align-items: flex-end; margin-right: 10px;">
                        <span id="name" class="name" style="margin-bottom: -5px; font-weight: 600;">Jesus Aguirre</span>
                        <span id="rol" class="job" style="margin-top: 0px;">GGeneral</span>
                    </div>

                    <div class="dropdown">
                        <a data-mdb-dropdown-init class="dropdown-toggle d-flex align-items-center hidden-arrow"
                            href="#" id="navbarDropdownMenuAvatar" role="button" aria-expanded="false">
                            <img id="profilePicture" src="" class="rounded-circle" height="35"
                                alt="Black and White Portrait of a Man" loading="lazy" />
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdownMenuAvatar">
                            <li>
                                <a class="dropdown-item" href="#">Perfil</a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="#">Configuraciones</a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="/logout">Cerrar sesión</a>
                            </li>
                        </ul>
                    </div>
                </div>
                <!-- Right elements -->
            </div>
            <!-- Container wrapper -->
        </nav>
        <!-- Navbar -->
    </header>
    <main style="margin-top: 20px">
        <div class="container pt-4">
            <h3 class="text-center">Producción</h3>
            <div class="tab-content" id="pills-tabContent2">


                <div class="table-responsive pt-3">
                    <table id="tablaProducciones" class="table align-middle mb-0 bg-white">
                        <thead class="bg-light">
                            <tr class="text-center">
                                <th scope="col">Folio</th>
                                <th scope="col">Lote</th>
                                <th scope="col">Cantidad</th>
                                <th scope="col">Nombre producto</th>
                                <th scope="col">Usuario</th>
                                <th scope="col">Estado</th>
                                <th scope="col">Acciones</th>
                            </tr>
                        </thead>
                        <tbody class="table-group-divider">
                            <!-- Aquí se cargarán las sucursales -->
                        </tbody>
                    </table>
                </div>
            </div>


            <div class="modal fade" id="VerProduccion" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">
                                <i class="fa-regular fa-address-card" style="color: #000000;"></i>
                                Formula en produccion
                            </h5>
                            <button type="button" class="btn-close" data-mdb-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <div class="row">
            
                            <div class="col-md-12">
                                <div style="display: flex; align-items: center; gap: 10px;">
                                    <label for="fecha" class="form-label" style="margin: 0;">Fecha:</label>
                                    <p id="fecha" style="margin: 0; border: none; background-color: transparent; padding: 0; flex: 1;" disabled>
                                    </p>
                                </div>
                            </div>
                            
                            <div class="col-md-12">
                                <div style="display: flex; align-items: center; gap: 10px;">
                                    <label for="nombreProducto" class="form-label" style="margin: 0;">Nombre:</label>
                                    <p id="nombreProducto" style="margin: 0; border: none; background-color: transparent; padding: 0; flex: 1;"
                                        disabled></p>
                                </div>
                            </div>
                            
                            <div class="col-md-12">
                                <div style="display: flex; align-items: center; gap: 10px;">
                                    <label for="cantidad" class="form-label" style="margin: 0;">Cantidad:</label>
                                    <p id="cantidad" style="margin: 0; border: none; background-color: transparent; padding: 0; flex: 1;" disabled>
                                    </p>
                                </div>
                            </div>
                            
                            <div class="col-md-12">
                                <div style="display: flex; align-items: center; gap: 10px;">
                                    <label for="folio" class="form-label" style="margin: 0;">Folio:</label>
                                    <p id="folio" style="margin: 0; border: none; background-color: transparent; padding: 0; flex: 1;" disabled></p>
                                </div>
                            </div>
                            
                            <div class="col-md-12">
                                <div style="display: flex; align-items: center; gap: 10px;">
                                    <label for="lote" class="form-label" style="margin: 0;">No. Lote:</label>
                                    <p id="lote" style="margin: 0; border: none; background-color: transparent; padding: 0; flex: 1;" disabled></p>
                                </div>
                            </div>
                            
                            <div class="col-md-12">
                                <div style="display: flex; align-items: center; gap: 10px;">
                                    <label for="estado" class="form-label" style="margin: 0; min-width: 100px;">Estado:</label>
                                    <span id="estado"
                                        style="margin: 0; border-radius: 5px; text-align: center; flex: 1;"></span>
                                </div>
                            </div>


                                <hr style="margin: 20px;">
            
                                <div class="table-responsive">
                                    <table class="table mt-2">
                                        <thead>
                                            <tr class="text-center">
                                                <th>Clave</th>
                                                <th>Cantidad</th>
                                            </tr>
                                        </thead>
                                        <tbody id="materiasPrimasTable"></tbody>
                                    </table>
                                </div>
            
            
            
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-mdb-dismiss="modal">Cerrar</button>                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

    </main>




    <!-- MDB -->
    <script type="text/javascript"
        src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/7.3.2/mdb.umd.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/crypto-js/4.1.1/crypto-js.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="js/main.js"></script>
    <script src="https://cdn.datatables.net/2.1.6/js/dataTables.js"></script>

    <script src="js/produccion/produccionAdmin.js"></script>

</body>

</html>