<% extraStyles=` `; %>
    
<main class="container-fluid pt-4" style="width: 80%;">
  <h3 class="text-center mb-4">
    <i class="fa-solid fa-file-invoice-dollar"></i> Fraccionar Ventas
  </h3>

  <!-- Botones superiores -->
  <div class="row mb-3">
    <div class="col-md-6 d-flex align-items-end">
      <button class="btn btn-primary w-100" id="btnBuscarHoy">Cargar ventas del día</button>
    </div>
    <div class="col-md-6 d-flex align-items-end">
      <button class="btn btn-secondary w-100" id="btnToggleSeleccion">Seleccionar todos</button>
    </div>
  </div>

  <!-- Fraccionamiento -->
  <div class="row mb-3">
    <div class="col-md-4">
      <label>% Fraccionamiento:</label>
      <input type="number" id="porcentajeFraccion" class="form-control" placeholder="Ej: 80" min="1" max="100">
    </div>
    <div class="col-md-4">
      <label>Descuento en pesos:</label>
      <input type="number" id="descuentoPesos" class="form-control" placeholder="Ej: 10.00" step="0.01">
    </div>
    <div class="col-md-4 d-flex align-items-end">
      <button class="btn btn-success w-100" id="btnAplicarFraccionamiento">Aplicar fraccionamiento</button>
    </div>
  </div>

  <!-- Tabla -->
  <div class="table-responsive">
    <table class="table table-bordered table-striped" id="tablaTickets">
      <thead>
        <tr>
          <th><input type="checkbox" id="checkMaster"></th>
          <th>#</th>
          <th>Folio</th>
          <th>Cliente</th>
          <th>Fecha</th>
          <th>Total</th>
          <th>Costo</th>
          <th>Descuento aplicado</th>
          <th>Total con descuento</th>
          <th>Fraccionar</th>
        </tr>
      </thead>
      <tbody id="contenedorTickets">
        <!-- Llenado dinámico -->
      </tbody>
    </table>
  </div>

  <!-- Resumen -->
  <div class="row mt-4">
    <div class="col-md-12 text-end">
      <h4>Total de factura global: $<span id="totalFactura">0.00</span></h4>
    </div>
  </div>
</main>

<!-- Modal para fraccionamiento de productos -->
<div class="modal fade" id="modalFraccionamiento" tabindex="-1" aria-labelledby="modalFraccionamientoLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header bg-primary text-white">
        <h5 class="modal-title" id="modalFraccionamientoLabel">Productos Fraccionados</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
      </div>
      <div class="modal-body">
        <table class="table table-bordered table-sm">
          <thead>
            <tr>
              <th>Producto</th>
              <th>Precio Original</th>
              <th>Costo</th>
              <th>Cantidad</th>
              <th>Precio Fraccionado</th>
              <th>Validez</th>
            </tr>
          </thead>
          <tbody id="tablaFraccionada"></tbody>
        </table>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
        <button type="button" class="btn btn-success" id="btnGuardarFraccionamiento">Guardar fraccionamiento</button>
      </div>
    </div>
  </div>
</div>



<% extraScripts=`
    <script src="js/global/fraccionar.js"></script>
`; %>

