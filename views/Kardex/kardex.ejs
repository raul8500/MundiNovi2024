<!doctype html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Mundi Novi 2024</title>
    <link rel="icon" href="img/logoColor.png" type="image/png">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
    <!-- MDB -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/7.3.2/mdb.min.css" rel="stylesheet" />

    <link href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css" rel="stylesheet">
    <style>
        .autocomplete-container {
            position: relative;
        }

        .productos-lista {
            position: absolute;
            top: 100%;
            left: 0;
            right: 0;
            max-height: 200px;
            overflow-y: auto;
            background: white;
            border: 1px solid #ccc;
            border-radius: 4px;
            z-index: 1000;
            list-style-type: none;
            padding: 0;
            margin: 0;
        }

        .productos-lista li {
            padding: 8px;
            cursor: pointer;
        }

        .productos-lista li:hover {
            background-color: #f0f0f0;
        }
        .selected {
            background-color: #d1e7dd; /* Cambia el color según el diseño de tu aplicación */
        }

    </style>
</head>

<body>
    <header>
        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg navbar-light bg-body-tertiary">
            <!-- Container wrapper -->
            <div class="container-fluid">
                <!-- Toggle button -->
                <button data-mdb-collapse-init class="navbar-toggler" type="button" data-mdb-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <i class="fas fa-bars"></i>
                </button>
        
                <!-- Collapsible wrapper -->
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <!-- Navbar brand -->
                    <a class="navbar-brand mt-2 mt-lg-0" href="/main">
                        <img src="img/logoColor.png" height="45" alt="MDB Logo"
                            loading="lazy" />
                    </a>
                    <!-- Left links -->
                    <ul id="options" class="navbar-nav me-auto mb-2 mb-lg-0">
                        
                    </ul>
                    <!-- Left links -->
                </div>
                <!-- Collapsible wrapper -->
        
                <!-- Right elements -->
                <div class="d-flex align-items-center">
                    <!-- Avatar -->
                    
                    <div class="info" style="display: flex; flex-direction: column; align-items: flex-end; margin-right: 10px;">
                        <span id="name" class="name" style="margin-bottom: -5px; font-weight: 600;">Jesus Aguirre</span>
                        <span id="rol" class="job" style="margin-top: 0px;">GGeneral</span>
                    </div>
                    
                    <div class="dropdown">
                        <a data-mdb-dropdown-init class="dropdown-toggle d-flex align-items-center hidden-arrow" href="#"
                            id="navbarDropdownMenuAvatar" role="button" aria-expanded="false">
                            <img id="profilePicture" src="" class="rounded-circle" height="35"
                                alt="Black and White Portrait of a Man" loading="lazy" />
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdownMenuAvatar">
                            <li>
                                <a class="dropdown-item" href="#">Perfil</a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="#">Configuraciones</a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="/logout">Cerrar sesión</a>
                            </li>
                        </ul>
                    </div>
                </div>
                <!-- Right elements -->
            </div>
            <!-- Container wrapper -->
        </nav>
        <!-- Navbar -->
    </header>
    
    <main style="margin-top: 58px">
        <div class="container-fluid pt-4" style="width: 85%;">
            <h3 class="text-center"><i class="fa-solid fa-warehouse"></i></i> Kardex</h3>


            <div class="row" style="margin-top: 30pt;">
                
                <div class="col-md-3">
                    <label for="sucursal" class="form-label">Sucursal</label>
                    <select id="sucursal" class="form-select" aria-label="Combo box example">
                    </select>
                </div>

                <div class="col-md-3">
                    <label for="busquedaProductosKardex" class="form-label">Producto</label>
                    <div class="autocomplete-container">
                        <input type="text" class="form-control" id="busquedaProductosKardex" placeholder="Nombre o código del producto">
                        <ul id="productosLista" class="productos-lista"></ul>
                    </div>
                    
                </div>

                <div class="col-md-3">
                    <label for="fechaInicial" class="form-label">Fecha Incial</label>
                    <input type="text" class="form-control" id="fechaInicial" placeholder="Seleccione fecha inicial">
                </div>
            
                <!-- Fecha Final -->
                <div class="col-md-3">
                    <label for="fechaFinal" class="form-label">Fecha Final</label>
                    <input type="text" class="form-control" id="fechaFinal" placeholder="Seleccione fecha final">
                </div>

            </div>

            <div class="row justify-content-end g-0" style="margin-top: 10pt; align-items: flex-end;">
                <div class="col-auto">
                    <button id="btnCargarKardex" type="button" class="btn btn-primary me-2" data-mdb-ripple-init><i class="fa-solid fa-database"></i> Cargar</button>
                </div>
                <div class="col-auto">
                    <button type="button" class="btn btn-primary me-2" data-mdb-ripple-init><i class="fa-solid fa-print"></i> Imprimir</button>
                </div>
                <div class="col-auto">
                    <button type="button" class="btn btn-secondary" data-mdb-ripple-init data-mdb-ripple-color="light"><i class="fa-solid fa-pen"></i> Ajustar</button>
                </div>
            </div>
            
            

            <div class="table-responsive pt-3">
                <table class="table align-middle mb-0 bg-white">
                    <thead class="bg-light">
                        <tr class="text-center">
                            <th scope="col">Fecha</th>
                            <th scope="col">Folio</th>
                            <th scope="col">Usuario</th>
                            <th scope="col">Movimiento</th>
                            <th scope="col">Sucursal</th>
                            <th scope="col">Clave</th>
                            <th scope="col">Nombre</th>
                            <th scope="col">Cantidad</th>
                            <th scope="col">Existencia</th>
                            <th scope="col">Costo Unitario</th>
                            <th scope="col">Acciones</th>
                        </tr>
                    </thead>
                    <tbody id="kardexData" class="table-group-divider">
                        <!-- Los datos se cargarán aquí dinámicamente -->
                    </tbody>
                </table>
                <div class="d-flex justify-content-center pt-3">
                    <ul class="pagination" id="paginationKardex">
                        <li class="page-item">
                            <a class="page-link" href="#" onclick="cambiarPaginaKardex(currentPageKardex - 1)" aria-label="Previous" id="anteriorKardex">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                        <!-- Los números de página se generarán dinámicamente aquí -->
                        <li class="page-item">
                            <a class="page-link" href="#" onclick="cambiarPaginaKardex(currentPageKardex + 1)" aria-label="Next" id="siguienteKardex">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            

        </div>
    </main>


    <!-- MDB -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/7.3.2/mdb.umd.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/crypto-js/4.1.1/crypto-js.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="js/main.js"></script>
    <!-- Bootstrap Datepicker JS -->
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>

    <script>
        flatpickr("#fechaInicial", {
            dateFormat: "Y-m-d"
        });
        
        flatpickr("#fechaFinal", {
            dateFormat: "Y-m-d"
        });
    </script>


    <script src="js/kardex/kardex.js"></script>
    <script src="js/kardex/kardexCargarDatosForm.js"></script>

</body>

</html>
