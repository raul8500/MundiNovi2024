    <main style="margin-top: 58px">
        <div class="container-fluid pt-4" style="width: 85%;">
            <h3 class="text-center"><i class="fa-solid fa-warehouse"></i></i> Kardex</h3>


            <div class="row" style="margin-top: 30pt;">
                
                <div class="col-md-3">
                    <label for="sucursal" class="form-label">Sucursal</label>
                    <select id="sucursal" class="form-select" aria-label="Combo box example">
                    </select>
                </div>

                <div class="col-md-3">
                    <label for="busquedaProductosKardex" class="form-label">Producto</label>
                    <div class="autocomplete-container">
                        <input type="text" class="form-control" id="busquedaProductosKardex" autocomplete="off" placeholder="Nombre o código del producto">
                        <ul id="productosLista" class="productos-lista"></ul>
                    </div>
                    
                </div>

                <div class="col-md-3">
                    <label for="fechaInicial" class="form-label">Fecha Incial</label>
                    <input type="text" class="form-control" id="fechaInicial" placeholder="Seleccione fecha inicial">
                </div>
            
                <!-- Fecha Final -->
                <div class="col-md-3">
                    <label for="fechaFinal" class="form-label">Fecha Final</label>
                    <input type="text" class="form-control" id="fechaFinal" placeholder="Seleccione fecha final">
                </div>


            </div>

            <div class="row justify-content-end g-0" style="margin-top: 10pt; align-items: flex-end;">
                <div class="col-auto">
                    <button id="btnCargarKardex" type="button" class="btn btn-primary me-2" data-mdb-ripple-init><i class="fa-solid fa-database"></i> Cargar</button>
                </div>
                <div class="col-auto">
                    <button id="btnImprimirKardex" type="button" class="btn btn-primary me-2" data-mdb-ripple-init><i class="fa-solid fa-print"></i> Imprimir</button>
                </div>
                <div class="col-auto">
                    <button id="btnAjustarKardex" type="button" class="btn btn-secondary" data-mdb-ripple-init data-mdb-ripple-color="light" data-target="#ajustarModal"><i class="fa-solid fa-pen"></i> Ajustar</button>
                </div>
            </div>
            
            

            <div class="table-responsive pt-3">
                <table class="table align-middle mb-0 bg-white" id="kardexTable">
                    <thead class="bg-light">
                        <tr class="text-center">
                            <th scope="col">Fecha</th>
                            <th scope="col">Folio</th>
                            <th scope="col">Usuario</th>
                            <th scope="col">
                                <span style="display: inline-block; vertical-align: middle;">Movimiento</span>
                                <select style="display: inline-block; width: 15px; height: 20px; vertical-align: middle;" id="tipoMovimiento" class="form-select" aria-label="Combo box example">
                                    <option value="Todo">Todo</option>
                                    <option value="Pedido">Pedido</option>
                                    <option value="Venta">Venta</option>
                                    <option value="Traspado">Salida por traspado</option>
                                    <option value="Devolucion">Devolución</option>
                                    <option value="Ajuste">Ajuste</option>
                                    <option value="Merma">Merma</option>
                                </select>
                            </th>
                            
                            <th scope="col">Sucursal destino</th>
                            <th scope="col">Clave</th>
                            <th scope="col">Nombre</th>
                            <th scope="col">Cantidad</th>
                            <th scope="col">Existencia</th>
                            <th scope="col">Costo Unitario</th>
                            <th scope="col">Acciones</th>
                        </tr>
                    </thead>
                    <tbody id="kardexData" class="table-group-divider">

                    </tbody>
                </table>
                <div class="d-flex justify-content-center pt-3">
                    <ul class="pagination" id="paginationKardex">
                        <li class="page-item">
                            <a class="page-link" href="#" onclick="cambiarPaginaKardex(currentPageKardex - 1)" aria-label="Previous" id="anteriorKardex">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                        <!-- Los números de página se generarán dinámicamente aquí -->
                        <li class="page-item">
                            <a class="page-link" href="#" onclick="cambiarPaginaKardex(currentPageKardex + 1)" aria-label="Next" id="siguienteKardex">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            

        </div>


        <!-- Modal -->
        <div class="modal fade" id="ajustarModal" tabindex="-1" role="dialog" aria-labelledby="ajustarModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="ajustarModalLabel">Ajuste de Producto</h5>
                        <button type="button" class="btn-close" data-mdb-dismiss="modal" aria-label="Close"></button>

                    </div>
                    <div class="modal-body">
                        <!-- Formulario dentro del modal -->
                        <form id="formAjusteProducto">

                            <div class="form-group">
                                <label for="selectSucursal">Producto</label>
                                <div class="autocomplete-container">
                                    <input type="text" id="inputBuscarProducto" placeholder="Buscar producto" autocomplete="off" class="form-control">
                                    <ul id="listaProductos" class="productos-lista"></ul>
                                </div>                                
                            </div>
                            
                            <div class="form-group" style="margin-top: 15px;">
                                <label for="selectSucursal">Sucursal</label>
                                <select class="form-control" id="sucursalSelect">
           
                                </select>
                            </div>
                            <div class="form-group" style="margin-top: 15px;">
                                <label for="inputCantidadAjuste">Cantidad</label>
                                <input type="number" class="form-control" id="inputCantidadAjuste" placeholder="Cantidad a ajustar" min="1">
                                <small id="cantidadAjusteHelp" class="form-text text-muted">Ingrese la cantidad a ajustar. Use un valor positivo para aumentar y un valor negativo para reducir.</small>
                            </div>

                            <div class="form-group" style="margin-top: 15px;">
                                <label for="inputMovimiento">Movimiento</label>
                                <select style="display: inline-block; width: 35px; height: 25px; vertical-align: middle;" id="tipoMovimientoAjuste" class="form-select" aria-label="Combo box example">
                                    <option value="Ajuste">&nbsp;&nbsp;Ajuste&nbsp;&nbsp;</option>
                                    <option value="Merma">&nbsp;&nbsp;Merma&nbsp;&nbsp;</option>
                                </select>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button id="cerraModalKardexAjuste" type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                        <button id="ajustarKardexGeneral" type="button" class="btn btn-primary">Guardar Ajuste</button>
                    </div>
                </div>
            </div>
        </div>
    </main>


<% extraScripts=`
