        flatpickr("#fechaInicial", {
            dateFormat: "Y-m-d"
        });
        
        flatpickr("#fechaFinal", {
            dateFormat: "Y-m-d"
        });
    </script>
    <script src="js/kardex/kardex.js"></script>
    <script src="js/kardex/kardexCargarDatosForm.js"></script>
    <script src="js/kardex/kardexAjustar.js" ></script>
    <script src="js/kardex/kardexDelete.js" ></script>
`; %>


