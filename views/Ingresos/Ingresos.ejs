<% extraStyles=` `; %>

    <main style="margin-top: 20px">

        <div class="container pt-4">
            <h3 class="text-center">Ingresos</h3>
            <div class="d-flex justify-content-end gap-2 mb-3">
                <button id="btnAgregarIngreso" class="btn btn-success d-flex align-items-center">
                    <i class="fas fa-plus me-2"></i> Agregar
                </button>
                <button id="btnConfiguracion" class="btn btn-primary d-flex align-items-center">
                    <i class="fas fa-cog me-2"></i>
                </button>
            </div>

            <!-- Modal -->
            <div class="modal fade" id="modalIngreso" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="modalLabel">Agregar/Editar Ingreso</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <!-- Formulario para agregar/editar -->
                            <form id="formIngreso" class="mb-4">
                                <div class="mb-3">
                                    <label for="sucursal" class="form-label">Sucursal</label>
                                    <select id="sucursal" class="form-select" required></select>
                                </div>
                                <div class="mb-3">
                                    <label for="tipoIngreso" class="form-label">Tipo de Ingreso</label>
                                    <select id="tipoIngreso" class="form-select" required></select>
                                </div>
                                <div class="mb-3">
                                    <label for="importe" class="form-label">Importe</label>
                                    <input type="number" id="importe" class="form-control" required>
                                </div>
                                <div class="mb-3">
                                    <label for="fecha" class="form-label">Fecha</label>
                                    <input type="date" id="fecha" class="form-control" required>
                                </div>
                                <div class="mb-3">
                                    <label for="observaciones" class="form-label">Observaciones</label>
                                    <textarea id="observaciones" class="form-control" rows="3"></textarea>
                                </div>
                                <div class="text-end">
                                    <button id="btnGuardarIngreso" type="submit" class="btn btn-success">Guardar</button>
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Tabla -->
            <div class="table-responsive">
                <table id="tablaIngresos" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th>Sucursal</th>
                            <th>Folio</th>
                            <th>Tipo Ingreso</th>
                            <th>Importe</th>
                            <th>Usuario</th>
                            <th>Fecha</th>
                            <th>Observaciones</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>






        <!-- Modal -->
        <div class="modal fade" id="modalTipoIngreso" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="modalLabel">Tipos de Ingreso</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <!-- Formulario para agregar/editar -->
                        <form id="formTipoIngreso" class="mb-4">
                            <input type="hidden" id="tipoIngresoId">
                            <div class="mb-3">
                                <label for="nombre" class="form-label">Nombre</label>
                                <input type="text" id="nombre" class="form-control" required>
                            </div>
                            <div class="mb-3">
                                <label for="descripcion" class="form-label">Descripción</label>
                                <input type="text" id="descripcion" class="form-control" required>
                            </div>
                            <button id="btnGuardar" type="submit" class="btn btn-success">Guardar</button>
                        </form>

                        <!-- Tabla para mostrar tipos de ingreso -->
                        <table id="tablaTiposIngreso" class="display" style="width:100%">
                            <thead>
                                <tr>
                                    <th>Nombre</th>
                                    <th>Descripción</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </main>




    <% extraScripts=` <script src="js/ingresos/tipoIngresos.js">
        </script>
        <script src="js/ingresos/ingresos.js"> </script>
        `; %>