    <main>
        <div class="container my-5">
            <h1 class="text-center mb-4">Punto de Venta</h1>
            
            <!-- Sección de Cliente -->
            <div class="row mb-4">
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Cliente</h5>
                            <div class="mb-3">
                                <label for="cliente" class="form-label">Seleccionar Cliente</label>
                                <input type="text" id="cliente" class="form-control" placeholder="Buscar cliente...">
                            </div>
                            <button class="btn btn-primary w-100">Agregar Cliente</button>
                        </div>
                    </div>
                </div>
    
                <!-- Sección de Productos -->
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Productos</h5>
                            <div class="row mb-3">
                                <div class="col-md-8 mb-3">
                                    <label for="producto" class="form-label">Buscar Producto</label>
                                    <input type="text" id="producto" class="form-control" placeholder="Buscar producto...">
                                </div>
                                <div class="col-md-2 mb-3">
                                    <label for="cantidad" class="form-label">Cantidad</label>
                                    <input type="number" id="cantidad" class="form-control" value="1">
                                </div>
                                <div class="col-md-2">
                                    <label for="agregarProducto" class="form-label">Agregar</label>
                                    <button class="btn btn-success w-100">Agregar Producto</button>
                                </div>
                            </div>
    
                            <!-- Tabla de Productos -->
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Producto</th>
                                            <th>Precio</th>
                                            <th>Cantidad</th>
                                            <th>Descuento</th>
                                            <th>Total</th>
                                            <th>Acciones</th>
                                        </tr>
                                    </thead>
                                    <tbody id="productos">
                                        <!-- Aquí se agregarán dinámicamente los productos -->
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    
            <!-- Sección de Promociones y Resumen -->
            <div class="row mb-4">
                <!-- Sección de Promociones -->
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Promociones y Descuentos</h5>
                            <div class="mb-3">
                                <label for="descuento" class="form-label">Aplicar Descuento</label>
                                <input type="text" id="descuento" class="form-control" placeholder="Código de descuento">
                            </div>
                            <button class="btn btn-info w-100">Aplicar Descuento</button>
                        </div>
                    </div>
                </div>
    
                <!-- Panel de Resumen -->
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Resumen de Venta</h5>
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <button class="btn btn-warning w-100">Cancelar</button>
                                </div>
                                <div class="col-md-6">
                                    <button class="btn btn-danger w-100">Pagar</button>
                                </div>
                            </div>
    
                            <div class="row">
                                <div class="col-md-6">
                                    <h6>Total Productos: <span id="totalProductos">0</span></h6>
                                </div>
                                <div class="col-md-6">
                                    <h6>Total Venta: $<span id="totalVenta">0.00</span></h6>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
    
                <!-- Sección de Facturación -->
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Facturación</h5>
                            <button class="btn btn-success w-100 mb-2">Generar Factura</button>
                            <button class="btn btn-secondary w-100">Enviar Factura por Email</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </main>>


