    <link rel="icon" href="img/logoColor.png" type="image/png">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
    <!-- MDB -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/7.3.2/mdb.min.css" rel="stylesheet" />

        <link href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css" rel="stylesheet">

    <link rel="stylesheet" href="https://cdn.datatables.net/2.1.6/css/dataTables.dataTables.css" />

</head>

<body>
    <header>
        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg navbar-light bg-body-tertiary">
            <!-- Container wrapper -->
            <div class="container-fluid">
                <!-- Toggle button -->
                <button data-mdb-collapse-init class="navbar-toggler" type="button"
                    data-mdb-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                    <i class="fas fa-bars"></i>
                </button>

                <!-- Collapsible wrapper -->
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <!-- Navbar brand -->
                    <a class="navbar-brand mt-2 mt-lg-0" href="/main">
                        <img src="img/logoColor.png" height="45" alt="MDB Logo" loading="lazy" />
                    </a>
                    <!-- Left links -->
                    <ul id="options" class="navbar-nav me-auto mb-2 mb-lg-0">

                    </ul>
                    <!-- Left links -->
                </div>
                <!-- Collapsible wrapper -->

                <!-- Right elements -->
                <div class="d-flex align-items-center">
                    <!-- Avatar -->

                    <div class="info"
                        style="display: flex; flex-direction: column; align-items: flex-end; margin-right: 10px;">
                        <span id="name" class="name" style="margin-bottom: -5px; font-weight: 600;">Jesus Aguirre</span>
                        <span id="rol" class="job" style="margin-top: 0px;">GGeneral</span>
                    </div>

                    <div class="dropdown">
                        <a data-mdb-dropdown-init class="dropdown-toggle d-flex align-items-center hidden-arrow"
                            href="#" id="navbarDropdownMenuAvatar" role="button" aria-expanded="false">
                            <img id="profilePicture" src="" class="rounded-circle" height="35"
                                alt="Black and White Portrait of a Man" loading="lazy" />
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdownMenuAvatar">
                            <li>
                                <a class="dropdown-item" href="#">Perfil</a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="#">Configuraciones</a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="/logout">Cerrar sesión</a>
                            </li>
                        </ul>
                    </div>
                </div>
                <!-- Right elements -->
            </div>
            <!-- Container wrapper -->
        </nav>
        <!-- Navbar -->
    </header>

    <main style="margin-top: 20px">
        <div class="container-fluid pt-4" style="width: 100%;">
            <h3 class="text-center" style="margin-bottom: 50px;">Listado de cortes de venta por sucursal (Recolección)</h3>

            <div class="row">
                <div class="col-md-3">
                    <label for="sucursal" class="form-label">Sucursal</label>
                    <select id="sucursal" class="form-select" aria-label="Combo box example">
                    </select>

                </div>

                <div class="col-md-3">
                    <label for="fechaInicial" class="form-label">Fecha Incial</label>
                    <input type="text" class="form-control" id="fechaInicial" placeholder="Seleccione fecha inicial">
                </div>
                
                <div class="col-md-3">
                    <label for="fechaFinal" class="form-label">Fecha Final</label>
                    <input type="text" class="form-control" id="fechaFinal" placeholder="Seleccione fecha final">
                </div>

                <div class="col-md-3 d-flex flex-column" style="justify-content: flex-end;">
                    <button id="btnCargarCortes" type="button" class="btn btn-primary me-2" data-mdb-ripple-init>
                        <i class="fa-solid fa-database"></i> Cargar
                    </button>
                </div>


            </div>

            <hr>

            <div class="row">

                <div class="col-md-10">
                    <div class="table-responsive pt-3">
                        <table id="tablaRecoleccion" class="table align-middle mb-0 bg-white">
                            <thead class="table-info">
                                <tr class="text-center" style="font-size:9.5pt; font-weight:bolder; color: white;">
                                    <th>Folio</th>
                                    <th>Fecha Inicial</th>
                                    <th>Fecha Final</th>
                                    <th>Usuario</th>
                                    <th>T. Cobranzas</th>
                                    <th>T. Crédito</th>
                                    <th>T. Débito</th>
                                    <th>T. Electrónicas</th>
                                    <th>Ventas</th>
                                    <th>Dev. ventas</th>
                                    <th>Total Venta</th>
                                    <th>Efectivo en Caja</th>
                                    <th>Vales</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody id="tablaRecoleccionBody" class="table-group-divider">
                    
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="col-md-2">
                    <div class="card border border-primary shadow-0 mb-3" style="width: 250px;">
                        <div class="card-header">
                            <h5 class="card-title">Cortes a recibir</h5>
                        </div>
                        <div class="card-body">
                            <table id="tablaReconectar" class="table align-middle mb-0 bg-white">
                                <thead class="bg-light">
                                    <tr class="text-center" style="font-size:9.5pt; font-weight:bolder;">
                                        <th>Folio</th>
                                        <th>Es parcial</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody class="table-group-divider">
                    
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </main>






    <!-- MDB -->
    <script type="text/javascript"
        src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/7.3.2/mdb.umd.min.js"></script>
