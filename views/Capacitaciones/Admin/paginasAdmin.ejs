<% extraStyles=` `; %>

    <main style="margin-top: 10px">
        <div class="container pt-4">
            <h3 class="text-center mb-4">Paginas</h3>

            <div class="tab-content" id="pills-tabContent2">
            
                <div class="d-flex justify-content-end" style="margin-top: 20px;">
                    <button id="btnAñadirPagina" type="button" class="btn btn-primary btn-rounded" data-mdb-ripple-color="dark"
                        data-mdb-toggle="modal" data-mdb-target="#ModalPaginas" data-mdb-whatever="@mdo">
                        Añadir <i class="fa-solid fa-plus" style="color: #ffffff;"></i>
                    </button>
                </div>


                <div class="table-responsive pt-3">
                    <table id="tablaPaginas" class="table align-middle mb-0 bg-white">
                        <thead class="bg-light">
                            <tr class="text-center">
                                <th scope="col">Nombre</th>
                                <th scope="col">Descripcion</th>
                                <th scope="col">Acciones</th>
                            </tr>
                        </thead>
                        <tbody class="table-group-divider">
                            <!-- Aquí se cargarán las sucursales -->
                        </tbody>
                    </table>
                </div>

            </div>

        </div>

        <div class="modal fade" id="ModalPaginas" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">
                            <i class="fa-solid fa-globe" style="color: #000000;"></i>
                            Subir Página
                        </h5>
                        <button type="button" class="btn-close" data-mdb-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form id="formPaginas">
                            <div class="mb-3">
                                <label for="nombrePagina" class="form-label">Nombre de la Página</label>
                                <input type="text" class="form-control" id="nombrePagina" name="nombre"
                                    placeholder="Nombre de la página" required>
                            </div>
                            <div class="mb-3">
                                <label for="descripcionPagina" class="form-label">Descripción</label>
                                <textarea class="form-control" id="descripcionPagina" name="descripcion" rows="3"
                                    placeholder="Descripción breve de la página" required></textarea>
                            </div>
                            <div class="mb-3">
                                <label for="linkPagina" class="form-label">Enlace</label>
                                <input type="url" class="form-control" id="linkPagina" name="link"
                                    placeholder="https://www.ejemplo.com" required>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-mdb-dismiss="modal">Cerrar</button>
                        <button type="button" class="btn btn-success" id="guardarPagina">Guardar</button>
                    </div>
                </div>
            </div>
        </div>

    </main>


<% extraScripts=`
    <script src="js/capacitacion/admin/paginasAdmin.js"></script>
`; %>

