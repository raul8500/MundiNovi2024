<% extraStyles=` `; %>

    <main style="margin-top: 10px">
        <div class="container pt-4">
            <h3 class="text-center mb-4">Examenes</h3>

            <div class="tab-content" id="pills-tabContent2">


                <div class="table-responsive pt-3">
                    <table id="tablaExamenes" class="table align-middle mb-0 bg-white">
                        <thead class="bg-light">
                            <tr class="text-center">
                                <th scope="col">Nombre</th>
                                <th scope="col">Descripcion</th>
                                <th scope="col">Calificación</th>
                                <th scope="col">Acciones</th>
                            </tr>
                        </thead>
                        <tbody class="table-group-divider">
                            <!-- Aquí se cargarán las sucursales -->
                        </tbody>
                    </table>
                </div>
            </div>


        </div>


        <div class="modal fade" id="ModalResponder" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="examenTitulo">Examen</h5>
                        <button type="button" class="btn-close" aria-label="Close" style="display: none;"></button>
                    </div>
                    <div class="modal-body">
                        <p id="examenDescripcion"></p>
                        <div id="preguntasExamen"></div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-success" id="terminarExamen">Terminar</button>
                    </div>
                </div>
            </div>
        </div>




    </main>

<% extraScripts=`
    <script src="js/capacitacion/user/examenes.js"></script>
`; %>


