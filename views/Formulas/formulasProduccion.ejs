<!doctype html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Mundi Novi 2024</title>
    <link rel="icon" href="img/logoColor.png" type="image/png">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
    <!-- MDB -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/7.3.2/mdb.min.css" rel="stylesheet" />

    <link rel="stylesheet" href="https://cdn.datatables.net/2.1.6/css/dataTables.dataTables.css" />
    <style>
       #listaProductos {
            max-height: 300px;
            overflow-y: auto;
            position: absolute;
            background: white;
            border: 1px solid #ddd;
            z-index: 1000;
            width: 100%;
            display: none;
        }
        #listaProductos .list-group-item {
            cursor: pointer;
        }
        #listaProductos .list-group-item:hover,
        #listaProductos .list-group-item.active {
            background-color: #007bff;
            color: white;
        }

        #listaMateriasPrimas {
            max-height: 150px;
            overflow-y: auto;
            position: absolute;
            background: white;
            border: 1px solid #ddd;
            z-index: 1000;
            width: 50%;
        }

        #listaMateriasPrimas .list-group-item {
            cursor: pointer;
        }
        .seleccionado {
            background-color: #007bff; /* Fondo azul */
            color: white; /* Texto blanco */
        }



    </style>
</head>

<body>
    <header>
        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg navbar-light bg-body-tertiary">
            <!-- Container wrapper -->
            <div class="container-fluid">
                <!-- Toggle button -->
                <button data-mdb-collapse-init class="navbar-toggler" type="button"
                    data-mdb-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                    <i class="fas fa-bars"></i>
                </button>

                <!-- Collapsible wrapper -->
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <!-- Navbar brand -->
                    <a class="navbar-brand mt-2 mt-lg-0" href="/main">
                        <img src="img/logoColor.png" height="45" alt="MDB Logo" loading="lazy" />
                    </a>
                    <!-- Left links -->
                    <ul id="options" class="navbar-nav me-auto mb-2 mb-lg-0">

                    </ul>
                    <!-- Left links -->
                </div>
                <!-- Collapsible wrapper -->

                <!-- Right elements -->
                <div class="d-flex align-items-center">
                    <!-- Avatar -->

                    <div class="info"
                        style="display: flex; flex-direction: column; align-items: flex-end; margin-right: 10px;">
                        <span id="name" class="name" style="margin-bottom: -5px; font-weight: 600;">Jesus Aguirre</span>
                        <span id="rol" class="job" style="margin-top: 0px;">GGeneral</span>
                    </div>

                    <div class="dropdown">
                        <a data-mdb-dropdown-init class="dropdown-toggle d-flex align-items-center hidden-arrow"
                            href="#" id="navbarDropdownMenuAvatar" role="button" aria-expanded="false">
                            <img id="profilePicture" src="" class="rounded-circle" height="35"
                                alt="Black and White Portrait of a Man" loading="lazy" />
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdownMenuAvatar">
                            <li>
                                <a class="dropdown-item" href="#">Perfil</a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="#">Configuraciones</a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="/logout">Cerrar sesión</a>
                            </li>
                        </ul>
                    </div>
                </div>
                <!-- Right elements -->
            </div>
            <!-- Container wrapper -->
        </nav>
        <!-- Navbar -->
    </header>


    <main style="margin-top: 20px">
        <div class="container pt-4">
            <h3 class="text-center">Formulas de producción</h3>
            <div class="tab-content" id="pills-tabContent2">

                <div class="d-flex justify-content-end " style="margin-top: 20px;">

                    <button id="btnAñadirFormula" type="button" class="btn btn-primary btn-rounded"
                        data-mdb-ripple-color="dark" data-mdb-toggle="modal" data-mdb-target="#modalFormulaProduccion"
                        data-mdb-whatever="@mdo">
                        Añadir <i class="fa-solid fa-plus" style="color: #ffffff;"></i>
                    </button>

                </div>

                <div class="table-responsive pt-3">
                    <table id="tablaFormulasProduccion" class="table align-middle mb-0 bg-white">
                        <thead class="bg-light">
                            <tr class="text-center">
                                <th scope="col">Producto asignado</th>
                                <th scope="col">Formula</th>
                                <th scope="col">Cantidad base</th>
                                <th scope="col">Fecha de creación</th>
                                <th scope="col">Observaciones</th>
                                <th scope="col">Costo proporción</th>
                                <th scope="col">Costo unidad</th>
                                <th scope="col">Acciones</th>
                            </tr>
                        </thead>
                        <tbody class="table-group-divider">

                        </tbody>
                    </table>
                </div>

            </div>

            <!-- Modal HTML -->
            <div class="modal fade" id="formulaModal" tabindex="-1" aria-labelledby="formulaModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="formulaModalLabel">Crear/Editar Fórmula de Producción</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-md-12" style="margin-bottom: 15px;">
                                    <label for="producto" class="form-label">Buscar Producto</label>
                                    <input type="text" id="producto" class="form-control" placeholder="Buscar producto...">
                                    <ul id="listaProductos" class="list-group mt-2" style="display: none; position: absolute; z-index: 1000;"></ul>
                                </div>

                                <div class="col-md-4">
                                    <label for="nombreFormulaInput" class="form-label">Nombre de la Fórmula</label>
                                    <input type="text" class="form-control" id="nombreFormulaInput">
                                </div>

                                <div class="col-md-4">
                                    <label for="paraQueCantidadInput" class="form-label">Para que cantidad es la fórmula</label>
                                    <input type="text" class="form-control" id="paraQueCantidadInput">
                                </div>

                                <div class="col-md-4">
                                    <label for="observacionesInput" class="form-label">Observaciones</label>
                                    <textarea class="form-control" id="observacionesInput" rows="3"></textarea>
                                </div>

                            </div>

                            <hr style="margin: 20px;">

                            <div class="row">
                                <div class="col-md-3">
                                    <label for="materiasPrimasCantidad" class="form-label">Cantidad</label>
                                    <input type="number" class="form-control" id="materiasPrimasCantidad" placeholder="0.0">
                                </div>
                                <div class="col-md-9">
                                    <label for="materiasPrimasInput" class="form-label">Materias Primas</label>
                                    <input type="text" class="form-control" id="materiasPrimasInput" placeholder="Selecciona una materia prima">
                                    <ul id="listaMateriasPrimas" class="list-group mt-2" style="display: none;"></ul> <!-- Sugerencias -->
                                </div>
                                
                            </div>
                            
                            <br>
                            
                            <div class="row justify-content-end">
                                <div class="col-md-3">
                                    <input type="text" class="form-control" id="materiasPrimasTotal" placeholder="0.0" disabled>
                                </div>
                            </div>
                            
                            <table class="table mt-2">
                                <thead>
                                    <tr>
                                        <th>Nombre</th>
                                        <th>Cantidad</th>
                                        <th>Costo</th>
                                        <th>Importe</th>
                                        <th>Acción</th>
                                    </tr>
                                </thead>
                                <tbody id="materiasPrimasTableBody"></tbody>
                            </table>


                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                                <button id="btnGuardarFormula" type="button" class="btn btn-primary">Guardar</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


    </main>


    <!-- MDB -->
    <script type="text/javascript"
        src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/7.3.2/mdb.umd.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/crypto-js/4.1.1/crypto-js.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="js/main.js"></script>
    <script src="https://cdn.datatables.net/2.1.6/js/dataTables.js"></script>

    <script src="js/formulas/formulas.js"></script>
    <script src="js/formulas/formulasLoad.js"></script>
    <script src="js/formulas/formulasLoadMateriasPrimas.js"></script>


</body>

</html>