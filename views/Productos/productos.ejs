<!doctype html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Mundi Novi 2024</title>
    <link rel="icon" href="img/logoColor.png" type="image/png">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
    <!-- MDB -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/7.3.2/mdb.min.css" rel="stylesheet" />

    <link rel="stylesheet" href="https://cdn.datatables.net/2.1.6/css/dataTables.dataTables.css" />
    <style>
        /* Estilos para la lista desplegable */
        #listaProductos {
            max-height: 300px;
            overflow-y: auto;
            position: absolute;
            background: white;
            border: 1px solid #ddd;
            z-index: 1000;
        }
        #listaProductos .list-group-item {
            cursor: pointer;
        }
        #sugerencias {
            position: absolute;
            border: 1px solid #ddd;
            background: #fff;
            max-height: 200px;
            overflow-y: auto;
            z-index: 1000;
        }
        #sugerenciasEdit {
            position: absolute;
            border: 1px solid #ddd;
            background: #fff;
            max-height: 200px;
            overflow-y: auto;
            z-index: 1000;
        }
        .sugerencia {
            padding: 10px;
            cursor: pointer;
        }
        .sugerencia.seleccionado {
            background: #ddd;
        }
        .total {
            font-weight: bold;
        }
        
    </style>
</head>

<body>
    <header>
        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg navbar-light bg-body-tertiary">
            <!-- Container wrapper -->
            <div class="container-fluid">
                <!-- Toggle button -->
                <button data-mdb-collapse-init class="navbar-toggler" type="button" data-mdb-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <i class="fas fa-bars"></i>
                </button>
        
                <!-- Collapsible wrapper -->
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <!-- Navbar brand -->
                    <a class="navbar-brand mt-2 mt-lg-0" href="/main">
                        <img src="img/logoColor.png" height="45" alt="MDB Logo"
                            loading="lazy" />
                    </a>
                    <!-- Left links -->
                    <ul id="options" class="navbar-nav me-auto mb-2 mb-lg-0">
                        
                    </ul>
                    <!-- Left links -->
                </div>
                <!-- Collapsible wrapper -->
        
                <!-- Right elements -->
                <div class="d-flex align-items-center">
                    <!-- Avatar -->
                    
                    <div class="info" style="display: flex; flex-direction: column; align-items: flex-end; margin-right: 10px;">
                        <span id="name" class="name" style="margin-bottom: -5px; font-weight: 600;">Jesus Aguirre</span>
                        <span id="rol" class="job" style="margin-top: 0px;">GGeneral</span>
                    </div>
                    
                    <div class="dropdown">
                        <a data-mdb-dropdown-init class="dropdown-toggle d-flex align-items-center hidden-arrow" href="#"
                            id="navbarDropdownMenuAvatar" role="button" aria-expanded="false">
                            <img id="profilePicture" src="" class="rounded-circle" height="35"
                                alt="Black and White Portrait of a Man" loading="lazy" />
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdownMenuAvatar">
                            <li>
                                <a class="dropdown-item" href="#">Perfil</a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="#">Configuraciones</a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="/logout">Cerrar sesión</a>
                            </li>
                        </ul>
                    </div>
                </div>
                <!-- Right elements -->
            </div>
            <!-- Container wrapper -->
        </nav>
        <!-- Navbar -->
    </header>
    
    <main style="margin-top: 20px">
        <div class="container pt-4">
                <h3 class="text-center"><i class="fa-solid fa-dolly"></i> Productos</h3>
            
                <div class="d-flex justify-content-end align-items-center" style="margin-top: 20px;">
                    <div class="d-flex align-items-center">
                        <button id="btnAddProducto" type="button" class="btn btn-primary btn-rounded me-2" data-mdb-ripple-init data-mdb-modal-init data-mdb-target="#exampleModal">
                            Añadir <i class="fa-solid fa-plus" style="color: #ffffff;"></i>
                        </button>
                
                        <div class="dropdown">
                            <button data-mdb-dropdown-init class="btn btn-secondary btn-rounded" href="#" id="dropDownOptions"
                                role="button" aria-expanded="false">
                                <i class="fa-solid fa-gear"></i>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropDownOptions">
                                <li><a id="btnAgregarGrupoModal" class="dropdown-item" href="#" data-bs-toggle="modal"
                                        data-bs-target="#modalGrupo">Grupo</a></li>
                                <li><a id="btnAgregarMarcaModal" class="dropdown-item" href="#" data-bs-toggle="modal"
                                        data-bs-target="#modalMarca">Marca</a></li>
                                <li><a id="btnAgregarLineaModal" class="dropdown-item" href="#" data-bs-toggle="modal"
                                        data-bs-target="#modalLinea">Linea</a></li>
                                <li><a id="btnAgregarDepartamentoModal" class="dropdown-item" href="#" data-bs-toggle="modal"
                                        data-bs-target="#modalDepartamento">Departamento</a></li>
                            </ul>
                        </div>
                    </div>
                </div>

                
                <div class="table-responsive pt-3">
                    <table id="tablaProductos" class="table align-middle mb-0 bg-white">
                        <thead class="bg-light">
                        <tr class="text-center">
                                <th scope="col">Clave</th>
                                <th scope="col">Estado</th>
                                <th scope="col">Nombre</th>
                                <th scope="col">Costo</th>
                                <th scope="col">Precio</th>
                                <th scope="col">Alegra</th>
                                <th scope="col">Acciones</th>
                            </tr>
                        </thead>
                        <tbody class="table-group-divider">
                            <!-- Aquí se cargarán los productos -->
                        </tbody>
                    </table>
                </div>

        </div>

        <!-- Modal -->
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-xl">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                        <button type="button" class="btn-close" data-mdb-ripple-init data-mdb-dismiss="modal"
                            aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <!-- Pills navs -->
                        <ul class="nav nav-pills mb-3" id="ex1" role="tablist">
                            <li class="nav-item" role="presentation">
                                <a data-mdb-pill-init class="nav-link active" id="ex1-tab-1" href="#ex1-pills-1" role="tab"
                                    aria-controls="ex1-pills-1" aria-selected="true">Datos Generales</a>
                            </li>
                            <li class="nav-item" role="presentation">
                                <a data-mdb-pill-init class="nav-link" id="ex1-tab-2" href="#ex1-pills-2" role="tab"
                                    aria-controls="ex1-pills-2" aria-selected="false">Datos Financieros</a>
                            </li>
                            <li class="nav-item" role="presentation">
                                <a data-mdb-pill-init class="nav-link" id="ex1-tab-3" href="#ex1-pills-3" role="tab"
                                    aria-controls="ex1-pills-3" aria-selected="false">Otros</a>
                            </li>
                            <li class="nav-item" role="presentation">
                                <a data-mdb-pill-init class="nav-link" id="ex1-tab-4" href="#ex1-pills-4" role="tab"
                                    aria-controls="ex1-pills-4" aria-selected="false">Proveedores</a>
                            </li>
                            <li class="nav-item" role="presentation">
                                <a data-mdb-pill-init class="nav-link" id="ex1-tab-5" href="#ex1-pills-5" role="tab"
                                    aria-controls="ex1-pills-5" aria-selected="false">Productos Adicionales</a>
                            </li>
                            <li class="nav-item" role="presentation">
                                <a data-mdb-pill-init class="nav-link" id="ex1-tab-6" href="#ex1-pills-6" role="tab"
                                    aria-controls="ex1-pills-6" aria-selected="false">Productos del Kit</a>
                            </li>
                            <li class="nav-item" role="presentation">
                                <a data-mdb-pill-init class="nav-link" id="ex1-tab-7" href="#ex1-pills-7" role="tab"
                                    aria-controls="ex1-pills-7" aria-selected="false">Productos del Grupo</a>
                            </li>
                            <li class="nav-item" role="presentation">
                                <a data-mdb-pill-init class="nav-link" id="ex1-tab-8" href="#ex1-pills-8" role="tab"
                                    aria-controls="ex1-pills-8" aria-selected="false">Productos Complementarios</a>
                            </li>
                        </ul>
                        <!-- Pills navs -->
        
                        <!-- Pills content -->
                        <div class="tab-content" id="ex1-content">
                            <div class="tab-pane fade show active" id="ex1-pills-1" role="tabpanel" aria-labelledby="ex1-tab-1">
                                <!-- Datos Generales Content -->
                                <form>
                            
                                    <div class="row mb-3">
                                        <div class="col-md-4">
                                            <input type="text" class="form-control" id="clave" placeholder="Clave del producto">
                                        </div>
                                        <div class="col-md-4">
                                            <input type="text" class="form-control" id="nombre" placeholder="Nombre del producto">
                                        </div>
                                        <div class="col-md-4">
                                            <input type="text" class="form-control" id="codigoBarras" placeholder="Código de Barras">
                                        </div>
                                    </div>
                            
                                    <div class="row mb-3">
                                        <div class="col-md-4">
                                            <input type="text" class="form-control" id="claveSAT" placeholder="Clave SAT del producto">
                                        </div>
                                        <div class="col-md-4">
                                            <input type="text" class="form-control" id="descripcion" placeholder="Descripción del producto">
                                        </div>
                                        <div class="col-md-4">
                                            <input type="date" class="form-control" id="fechaAlta">
                                        </div>
                                    </div>
                            
                                    <div class="row mb-3">
                                        <div class="col-md-3">
                                            <label for="estadoProducto" class="form-label">Estado del Producto</label>
                                            <select class="form-select" id="estadoProducto">
                                                <option value="activo">Activo</option>
                                                <option value="inactivo">Inactivo</option>
                                            </select>
                                        </div>
                            
                                        <div class="col-md-3">
                                            <label class="form-label">Tipo</label>
                                            <br>
                                            <div class="form-check form-check-inline">
                                                <input class="form-check-input" type="checkbox" id="tipoKit">
                                                <label class="form-check-label" for="tipoKit">Kit</label>
                                            </div>
                                            <div class="form-check form-check-inline">
                                                <input class="form-check-input" type="checkbox" id="tipoGrupo">
                                                <label class="form-check-label" for="tipoGrupo">Grupo</label>
                                            </div>
                                        </div>                            
                                    </div>
                            
                                    <div class="row mb-3">
                                        <div class="col-md-4">
                                            <label for="grupo" class="form-label">Grupo</label>
                                            <select class="form-select" id="grupo">
                                                <option value="" selected>Selecciona Grupo</option>
                                                <!-- Opciones -->
                                            </select>
                                        </div>
                                        <div class="col-md-4">
                                            <label for="marca" class="form-label">Marca</label>
                                            <select class="form-select" id="marca">
                                                <option value="" selected>Selecciona Marca</option>
                                                <!-- Opciones -->
                                            </select>
                                        </div>
                                        <div class="col-md-4">
                                            <label for="linea" class="form-label">Línea</label>
                                            <select class="form-select" id="linea">
                                                <option value="" selected>Selecciona Línea</option>
                                                <!-- Opciones -->
                                            </select>
                                        </div>
                                    </div>

                                    <div class="row mb-3">
                                        <div class="col-md-4">
                                            <label for="departamento" class="form-label">Departamento</label>
                                            <select class="form-select" id="departamento">
                                                <option value="" selected>Selecciona Departamento</option>
                                                <!-- Opciones -->
                                            </select>
                                        </div>
                                        <div class="col-md-4">
                                            <label for="impuesto" class="form-label">Impuesto</label>
                                            <select class="form-select" id="impuesto">
                                                <option value="" selected>Selecciona Impuesto</option>
                                                <!-- Opciones -->
                                            </select>
                                        </div>
                                        <div class="col-md-4">
                                            <label for="unidad" class="form-label">Unidad</label>
                                            <select class="form-select" id="unidad">
                                                <option value="" selected>Selecciona Unidad</option>
                                                <!-- Opciones -->
                                            </select>
                                        </div>
                                    </div>
                                    
                                    <div class="mb-3">
                                        <label for="observaciones" class="form-label">Observaciones</label>
                                        <textarea class="form-control" id="observaciones" rows="3"></textarea>
                                    </div>
                                </form>
                            </div>
                            <div class="tab-pane fade" id="ex1-pills-2" role="tabpanel" aria-labelledby="ex1-tab-2">
                                Contenido de Datos Financieros
                            </div>
                            <div class="tab-pane fade" id="ex1-pills-3" role="tabpanel" aria-labelledby="ex1-tab-3">
                                Contenido de Otros
                            </div>
                            <div class="tab-pane fade" id="ex1-pills-4" role="tabpanel" aria-labelledby="ex1-tab-4">
                                Contenido de Proveedores
                            </div>
                            <div class="tab-pane fade" id="ex1-pills-5" role="tabpanel" aria-labelledby="ex1-tab-5">
                                Contenido de Productos Adicionales
                            </div>
                            <div class="tab-pane fade" id="ex1-pills-6" role="tabpanel" aria-labelledby="ex1-tab-6">
                                Contenido de Productos del Kit
                            </div>
                            <div class="tab-pane fade" id="ex1-pills-7" role="tabpanel" aria-labelledby="ex1-tab-7">
                                Contenido de Productos del Grupo
                            </div>
                            <div class="tab-pane fade" id="ex1-pills-8" role="tabpanel" aria-labelledby="ex1-tab-8">
                                Contenido de Productos Complementarios
                            </div>
                        </div>
                        <!-- Pills content -->
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-mdb-ripple-init
                            data-mdb-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary" data-mdb-ripple-init>Save changes</button>
                    </div>
                </div>
            </div>
        </div>





    </main>


    <!-- MDB -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/7.3.2/mdb.umd.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/crypto-js/4.1.1/crypto-js.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.datatables.net/2.1.6/js/dataTables.js"></script>
    <script src="js/main.js"></script>

    <script src="js/productos/productos.js"></script>

</body>

</html>
