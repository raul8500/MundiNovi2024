<% extraStyles=` `; %>



    <main style="margin-top: 10px;">
        <div class="container-fluid pt-4" style="width: 70%;">
            <h4 class="text-center" style="margin-bottom: 20px;">Finalizar traspasos</h4>

            <!-- Tabla de Recepción -->
            <div class="table-responsive">
                <table id="tablaRecepcion" class="table table-bordered table-hover">
                    <thead class="thead-light">
                        <tr>

                        </tr>
                    </thead>
                    <tbody>
                        <!-- Filas dinámicas aquí -->
                    </tbody>
                </table>
            </div>
        </div>
    </main>

    <!-- Modal Recepción -->
    <div class="modal fade" id="modalRecepcion" tabindex="-1" role="dialog" aria-labelledby="modalRecepcionLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
            <h5 class="modal-title">Recepción de Traspaso</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Cerrar">
                <span aria-hidden="true">&times;</span>
            </button>
            </div>
            <div class="modal-body">
            <input type="text" id="inputReferencia" class="form-control mb-3" placeholder="Escribe referencia del producto...">
            <table class="table table-bordered" id="tablaProductosReparto">
                <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Referencia</th>
                    <th>Cantidad</th>
                    <th>Contado</th>
                </tr>
                </thead>
                <tbody>
                <!-- Se llenará dinámicamente -->
                </tbody>
            </table>
            </div>
            <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
            <button id="btnConfirmarRecepcion" class="btn btn-success">Confirmar recepción</button>
            </div>
        </div>
        </div>
    </div>
  


    <% extraScripts=` <script src="js/traspasos/finalizarTraspasos.js">
        </script>
        `; %>