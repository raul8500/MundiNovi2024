<% extraStyles=` `; %>




    <main style="margin-top: 20px">
        <div class="container pt-4">
            <h3 class="text-center">Actas administrativas</h3>
            <div class="tab-content" id="pills-tabContent2">
                <div class="d-flex justify-content-end " style="margin-top: 20px;">

                    <button id="btnAñadirProveedor" type="button" class="btn btn-primary btn-rounded" data-bs-toggle="modal"
                        data-bs-target="#modalActas">
                        Crear Acta <i class="fa-solid fa-plus" style="color: #ffffff;"></i>
                    </button>

                    <button id="abrirModalTipoActas" type="button" class="btn btn-secondary btn-rounded ms-2">
                        Tipos de Actas <i class="fa-solid fa-cog" style="color: #ffffff;"></i>
                    </button>


                </div>
                <div class="table-responsive pt-3">
                    <table id="tablaActas" class="table align-middle mb-0 bg-white">
                        <thead class="bg-light">
                            <tr class="text-center">
                                <th scope="col">Formato</th>
                                <th scope="col">Usuario</th>
                                <th scope="col">Fecha y hora</th>
                                <th scope="col">Acciones</th>
                            </tr>
                        </thead>
                        <tbody class="table-group-divider">
                            <!-- Aquí se cargarán las sucursales -->
                        </tbody>
                    </table>
                </div>



            </div>

            <!-- Modal para crear acta administrativa -->
            <div class="modal fade" id="modalActas" tabindex="-1" aria-labelledby="modalActasLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="modalActasLabel">Crear Acta Administrativa</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <form id="formActas">
                                <div class="mb-3">
                                    <label for="tipoActa" class="form-label">Tipo de Acta</label>
                                    <select id="tipoActa" class="form-select" required>
                                        <option value="" disabled selected>Seleccione el tipo de acta</option>
                                        <option value="retardos">Retardos</option>
                                        <option value="faltas">Faltas</option>
                                        <option value="faltaTicket">Faltas de Ticket</option>
                                        <option value="fondoCaja">Fondo de Caja</option>
                                        <option value="malaAtencion">Mala Atención al Cliente</option>
                                        <option value="usoCelular">Uso Excesivo del Celular</option>
                                    </select>
                                </div>
                                <div class="mb-3">
                                    <label for="usuarioId" class="form-label">Usuario</label>
                                    <select id="usuarioId" class="form-select" required>
                                        <!-- Opciones cargadas dinámicamente -->
                                    </select>
                                </div>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                            <button type="button" id="btnGenerarActa" class="btn btn-primary">Generar Acta</button>
                        </div>
                    </div>
                </div>
            </div>


            <!-- Modal para administrar tipos de actas -->
            <div class="modal fade" id="tipoActasModal" tabindex="-1" aria-labelledby="tipoActasModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-xl">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="tipoActasModalLabel">Administrar Tipos de Actas</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <!-- Formulario para crear/editar tipos de actas -->
                            <form id="tipoActaForm">
                                <input type="hidden" id="tipoActaId">
                                <div class="mb-3">
                                    <label for="tipoInput" class="form-label">Tipo</label>
                                    <input type="text" class="form-control" id="tipoInput" placeholder="Ej: retardos" required>
                                </div>
                                <div class="mb-3">
                                    <label for="mensajeInput" class="form-label">Mensaje</label>
                                    <textarea class="form-control" id="mensajeInput" rows="3" placeholder="Escribe el mensaje..."
                                        required></textarea>
                                    <small class="form-text text-muted">
                                        Usa los placeholders:
                                        <code>{hora}</code>,
                                        <code>{dia}</code>,
                                        <code>{nombre}</code> para insertar valores dinámicos en el mensaje.
                                    </small>
                                </div>
                                <div class="text-end">
                                    <button type="submit" class="btn btn-primary">Guardar</button>
                                </div>
                            </form>
                            <hr>
                            <!-- Tabla para listar tipos de actas con DataTables -->
                            <h5>Lista de Tipos de Actas</h5>
                            <table id="tiposActasTabla" class="table table-bordered table-hover table-sm text-center">
                                <thead class="table-light">
                                    <tr>
                                        <th>Tipo</th>
                                        <th>Mensaje</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>



    </main>




<% extraScripts=` 
        <script src="js/actas/actas.js"></script>
`; %>

