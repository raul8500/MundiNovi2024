<% extraStyles=`
    <style>
        /* Pantalla de carga completa */
#loadingScreen {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(255, 255, 255, 0.8);
    z-index: 9999;
    display: none; /* Ocultarlo por defecto */
    justify-content: center;
    align-items: center;
}

/* Clase que muestra el spinner */
#loadingScreen.show {
    display: flex;
}

        </style>

`; %>

    <main style="margin-top: 20px">
        <div class="container pt-4">
            <h3 class="text-center">Control de Inventarios</h3>

                <!-- Pantalla de carga completa (estará oculta por defecto) -->
                <div id="loadingScreen" style="display: none;">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Cargando...</span>
                    </div>
                </div>

            <div class="tab-content" id="pills-tabContent2" style="margin-top: 30px;">

                <!-- Fila con el select de sucursales y los botones -->
                <div class="row mb-3">
                    <!-- Select de Sucursales -->
                    <div class="col-12 col-md-4 mb-3 mb-md-0">
                        <select id="sucursalSelect" class="form-select">
                            <option selected disabled>Seleccione una sucursal</option>
                            <!-- Agregar más sucursales según sea necesario -->
                        </select>
                    </div>

                    <!-- Botones de Crear Reporte e Imprimir -->
                    <div class="col-12 col-md-8">
                        <div class="d-flex justify-content-start gap-2">
                            <button id="crearReporte" type="button" class="btn btn-primary">
                                <i class="fa-solid fa-file-alt"></i> Crear Reporte
                            </button>
                            <button id="imprimirReporte" type="button" class="btn btn-primary">
                                <i class="fa-solid fa-print"></i> Imprimir
                            </button>
                        </div>                        
                    </div>
                </div>
                <!-- Tabla de Inventarios -->
                <div class="table-responsive">
                    <table class="table table-striped table-bordered">
                        <thead class="table-light">
                            <tr>
                                <th>Cantidad</th>
                                <th>Clave</th>
                                <th>Producto</th>
                                <th>Costo</th>
                                <th>Importe</th>
                            </tr>
                        </thead>
                        <tbody id="datosCostoInventario">
                            
                        </tbody>
                    </table>
                </div>

                <!-- Total -->
                <div class="mt-4 text-end">
                    <h5 id="totalCostoInventario"></h5>
                </div>
            </div>
        </div>
    </main>






<% extraScripts=` 
    <script src="js/reportes/reporteCostoInventario.js"></script>
`; %>



