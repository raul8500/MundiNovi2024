    <main style="margin-top: 58px">
        <div class="container pt-4" style="max-width: 80%;">
            <h3 class="text-center">Ventas Generales</h3>
            <div class="tab-content" id="pills-tabContent2">
                  
                <div class="d-flex row" style="margin-top: 50px; align-items: center;">
                    <div class="col-md-2">
                        <label style="font-weight: 600;" class="form-label" for="marca">Franquicia:</label>
                        <select id="marca" class="form-select" aria-label="Combo box example">
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label style="font-weight: 600;" class="form-label" for="marca">Sucursal:</label>
                        <select id="marca" class="form-select" aria-label="Combo box example">
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label style="font-weight: 600;" class="form-label" for="marca">Usuario:</label>
                        <select id="marca" class="form-select" aria-label="Combo box example">
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label  style="font-weight: 600;" class="form-label" for="datepicker">Fecha incial:</label>
                        <div class="input-group date" id="datepicker">
                            <input type="text" class="form-control" placeholder="dd/mm/yyyy">
                            <div class="input-group-append">
                                <span class="input-group-text">
                                    <i class="fas fa-calendar-alt"></i>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <label  style="font-weight: 600;" class="form-label" for="datepicker">Fecha final:</label>
                        <div class="input-group date" id="datepicker">
                            <input type="text" class="form-control" placeholder="dd/mm/yyyy">
                            <div class="input-group-append">
                                <span class="input-group-text">
                                    <i class="fas fa-calendar-alt"></i>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row mt-3">
                    <div class="col-md-12 text-end">
                        <button id="btnAddProducto" type="button" class="btn btn-primary btn-rounded me-2" data-mdb-ripple-color="dark"
                            data-mdb-toggle="modal" data-mdb-target="#ModalAddProducto" data-mdb-whatever="@mdo">
                            Cargar <i class="fa-solid fa-upload" style="color: #ffffff;"></i>
                        </button>
                        <button id="btnAddProducto2" type="button" class="btn btn-primary btn-rounded me-2" data-mdb-ripple-color="dark"
                            data-mdb-toggle="modal" data-mdb-target="#ModalAddProducto" data-mdb-whatever="@mdo">
                            Generar reporte <i class="fa-solid fa-download" style="color: #ffffff;"></i>
                        </button>
                    </div>
                </div>
                
                
                    <br>
                    <div class="table-responsive pt-3">
                      <table class="table align-middle mb-0 bg-white">
                          <thead class="bg-light">
                            <tr class="text-center">
                                  <th scope="col">No. Venta</th>
                                  <th scope="col">Costo</th>
                                  <th scope="col">Venta</th>
                                  <th scope="col">Fecha de venta</th>
                                  <th scope="col">Cliente</th>
                                  <th scope="col">Factura</th>
                                  <th scope="col">Acciones</th>
                              </tr>
                          </thead>
                          <tbody id="usuariosData" class="table-group-divider">
                              <!-- Aquí se cargarán las sucursales -->
                          </tbody>
                      </table>
                      <div class="d-flex justify-content-center pt-3">
                          <ul class="pagination" id="paginationUsuarios">
                              <li class="page-item">
                                  <a class="page-link" href="#" onclick="cambiarPaginaUsuarios(currentPageUsuarios - 1)" aria-label="Previous" id="anteriorUsuarios">
                                      <span aria-hidden="true">&laquo;</span>
                                  </a>
                              </li>
                              <!-- Los números de página se generarán dinámicamente aquí -->
                              <li class="page-item">
                                  <a class="page-link" href="#" onclick="cambiarPaginaUsuarios(currentPageUsuarios + 1)" aria-label="Next" id="siguienteUsuarios">
                                      <span aria-hidden="true">&raquo;</span>
                                  </a>
                              </li>
                          </ul>
                      </div>
                  </div>



          
          

        </div>
