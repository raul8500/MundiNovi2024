    <main style="margin-top: 58px">
        <div class="container pt-4">
            <h3 class="text-center"><i class="fa-solid fa-users"></i> Clientes</h3>

            <div id="loadingSpinner" class="text-center my-3">
                <div class="spinner-border" role="status">
                  <span class="sr-only">Loading...</span>
                </div>
              </div>
              
            
            <div class="tab-content" id="pills-tabContent2">
                <div class="d-flex justify-content-between align-items-center" style="margin-top: 50px;">
                    <div class="d-flex flex-grow-1 pe-2" style="max-width: 400px;">
                        <div class="input-group">
                            <input type="text" class="form-control" id="busquedaClientesMain" placeholder= "Nombre del cliente">
                        </div>
                    </div>
                
                    <div class="d-flex align-items-center">
                        <button id="btnAddProducto" type="button" class="btn btn-primary btn-rounded me-2" data-mdb-ripple-color="dark"
                            data-mdb-toggle="modal" data-mdb-target="#ModalAddProducto" data-mdb-whatever="@mdo">
                            Añadir <i class="fa-solid fa-plus" style="color: #ffffff;"></i>
                        </button>
                        
                        <div class="dropdown">
                            <button data-mdb-dropdown-init class="btn btn-secondary btn-rounded" href="#"
                                id="dropDownOptions" role="button" aria-expanded="false">
                                <i class="fa-solid fa-gear"></i>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropDownOptions">
                                <li><a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#modalZonaCliente">Zona de cliente</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                
                  
                <div class="table-responsive pt-3">
                    <table class="table align-middle mb-0 bg-white">
                      <thead class="bg-light">
                        <tr class="text-center">
                          <th scope="col">Clave</th>
                          <th scope="col">Nombre</th>
                          <th scope="col">RFC</th>
                          <th scope="col">Email contacto</th>
                          <th scope="col">Telefono principal</th>
                          <th scope="col">Factura</th>
                          <th scope="col">Fecha Ult. Act.</th>
                          <th scope="col">Acciones</th>
                        </tr>
                      </thead>
                      <tbody id="clientesData" class="table-group-divider">
                        <!-- Aquí se cargarán los clientes -->
                      </tbody>
                    </table>
                    <div class="d-flex justify-content-center pt-3">
                      <ul class="pagination" id="paginationClientes">
                        <li class="page-item">
                          <a class="page-link" href="#" onclick="cambiarPaginaClientes(currentPageClientes - 1)" aria-label="Previous" id="anteriorClientes">
                            <span aria-hidden="true">&laquo;</span>
                          </a>
                        </li>
                        <!-- Los números de página se generarán dinámicamente aquí -->
                        <li class="page-item">
                          <a class="page-link" href="#" onclick="cambiarPaginaClientes(currentPageClientes + 1)" aria-label="Next" id="siguienteClientes">
                            <span aria-hidden="true">&raquo;</span>
                          </a>
                        </li>
                      </ul>
                    </div>
                </div>
                  

            
        <!--Modales-->  
            
        <div class="modal fade" id="ModalAddCliente" tabindex="-1" aria-labelledby="exampleModalLabel"
            aria-hidden="true">
            <div class="modal-dialog modal-xl">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">
                            <i class="fa-regular fa-address-card" style="color: #000000;"></i>
                            Registrar nuevo cliente
                        </h5>
                        <button type="button" class="btn-close" data-mdb-dismiss="modal"
                            aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div>
                            <div class="modal-body">
                                <!-- Pills navs -->
                                <ul class="nav nav-pills mb-3" id="ex1" role="tablist">
                                    <li class="nav-item" role="presentation">
                                        <a data-mdb-pill-init class="nav-link active" id="ex1-tab-1" href="#ex1-pills-1" role="tab"
                                            aria-controls="ex1-pills-1" aria-selected="true">Datos generales</a>
                                    </li>
                                    
                                </ul>
                                <!-- Pills navs -->
                            
                                <!-- Pills content -->
                                <div class="tab-content" id="ex1-content">

                                    <!--Datos generales-->
                                    <div class="tab-pane fade show active" id="ex1-pills-1" role="tabpanel" aria-labelledby="ex1-tab-1">
                                        <div class="row">
                                          <h4>Datos generales</h4>
                                      
                                          <div class="col-md-3">
                                            <label style="font-weight: 600;" for="factura" class="col-form-label">¿Factura?</label>
                                            <div>
                                              <input type="radio" name="factura" id="factura_si" value="si" /> Sí
                                              <input type="radio" name="factura" id="factura_no" value="no" checked /> No
                                            </div>
                                          </div>
                                      
                                            <div class="col-md-3">
                                                <label style="font-weight: 600;" for="nombreCliente" class="col-form-label">
                                                    Nombre: <span style="color: red; font-weight: bold;">*</span>
                                                </label>
                                                <input type="text" class="form-control" id="nombreCliente" required />
                                            </div>
                                        
                                          
                                          <div class="col-md-3">
                                            <label style="font-weight: 600;" for="rfc" class="col-form-label">Identificación (RFC):</label>
                                            <input type="text" class="form-control" id="rfc" />
                                          </div>
                                      
                                          <div class="col-md-3">
                                            <label style="font-weight: 600;" class="form-label" for="regimen">Régimen:
                                                <span style="color: red; font-weight: bold;">*</span>
                                            </label>
                                            <select id="regimen" class="form-select" aria-label="Combo box example">
                                            </select>
                                          </div>
                                      
                                          <div class="col-md-3">
                                            <label style="font-weight: 600;" for="telefonoPrincipal" class="col-form-label">Teléfono principal:</label>
                                            <input type="text" class="form-control" id="telefonoPrincipal" />
                                          </div>
                                      
                                          <div class="col-md-3">
                                            <label style="font-weight: 600;" for="telefonoContacto" class="col-form-label">Teléfono de contacto:</label>
                                            <input type="text" class="form-control" id="telefonoContacto" />
                                          </div>
                                      
                                      
                                          <div class="col-md-3">
                                            <label style="font-weight: 600;" for="correoElectronicoContacto" class="col-form-label">Correo electrónico de contacto:</label>
                                            <input type="text" class="form-control" id="correoElectronicoContacto" />
                                          </div>
                                      
                                          <hr style="margin-top: 10px;">
                                      
                                          <h4>Dirección</h4>
                                      
                                          <div class="col-md-3">
                                            <label style="font-weight: 600;" for="calle" class="col-form-label">Calle:</label>
                                            <input type="text" class="form-control" id="calle" />
                                          </div>
                                      
                                          <div class="col-md-3">
                                            <label style="font-weight: 600;" for="numeroExterior" class="col-form-label">Número Exterior:</label>
                                            <input type="text" class="form-control" id="numeroExterior" />
                                          </div>
                                      
                                          <div class="col-md-3">
                                            <label style="font-weight: 600;" for="numeroInterior" class="col-form-label">Número Interior:</label>
                                            <input type="text" class="form-control" id="numeroInterior" />
                                          </div>
                                      
                                          <div class="col-md-3">
                                            <label style="font-weight: 600;" for="colonia" class="col-form-label">Colonia:</label>
                                            <input type="text" class="form-control" id="colonia" />
                                          </div>
                                      
                                          <div class="col-md-3">
                                            <label style="font-weight: 600;" for="localidad" class="col-form-label">Localidad:</label>
                                            <input type="text" class="form-control" id="localidad" />
                                          </div>
                                      
                                          <div class="col-md-3">
                                            <label style="font-weight: 600;" for="municipioDelegacion" class="col-form-label">Municipio/Delegación:</label>
                                            <input type="text" class="form-control" id="municipioDelegacion" />
                                          </div>
                                      
                                          <div class="col-md-3">
                                            <label style="font-weight: 600;" for="estado" class="col-form-label">Estado:</label>
                                            <input type="text" class="form-control" id="estado" />
                                          </div>
                                      
                                          <div class="col-md-3">
                                            <label style="font-weight: 600;" for="codigoPostal" class="col-form-label">Código postal:
                                                <span style="color: red; font-weight: bold;">*</span>
                                            </label>
                                            <input type="text" class="form-control" id="codigoPostal" />
                                          </div>
                                      
                                          <hr style="margin-top: 10px;">
                                        </div>
                                      </div>
                                      

                                    
                                </div>
                                <!-- Pills content -->
                            
                                <div class="modal-footer d-flex justify-content-between align-items-center">
                                    <h5 class="text-start mb-0"></h5>
                                    <div>
                                        <button type="button" class="btn btn-secondary" data-mdb-dismiss="modal">Cerrar</button>
                                        <button type="submit" id="btnGuardarCliente" class="btn btn-primary">Guardar</button>
                                    </div>
                                </div>
                                

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Modal Zonas de Clientes -->
        <div class="modal fade" id="modalZonaCliente" tabindex="-1" aria-labelledby="modalZonaClienteLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="modalZonaClienteLabel">Zonas de Clientes</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-2">
                                <div class="form-outline" data-mdb-input-init>
                                    <input type="text" id="formZonaClave" class="form-control" />
                                    <label class="form-label" for="formZonaClave">Clave</label>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-outline" data-mdb-input-init>
                                    <input type="text" id="formZonaNombre" class="form-control" />
                                    <label class="form-label" for="formZonaNombre">Nombre</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-outline" data-mdb-input-init>
                                    <input type="text" id="formZonaDescripcion" class="form-control" />
                                    <label class="form-label" for="formZonaDescripcion">Descripción</label>
                                </div>
                            </div>
                        </div>

                        <div class="row mt-3">
                            <div class="col-md-12 d-flex justify-content-end">
                                <button id="btnAddZonaCliente" type="button" class="btn btn-primary btn-rounded" data-mdb-ripple-color="dark">
                                    Agregar <i class="fa-solid fa-plus" style="color: #ffffff;"></i>
                                </button>
                            </div>
                        </div>

                        <div class="table-responsive pt-3">
                            <table class="table align-middle mb-0 bg-white">
                                <thead class="bg-light">
                                    <tr class="text-center">
                                        <th scope="col">Clave</th>
                                        <th scope="col">Nombre</th>
                                        <th scope="col">Descripción</th>
                                        <th scope="col">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody id="zonaClienteData" class="table-group-divider">
                                    <!-- Aquí se cargarán las zonas de clientes -->
                                </tbody>
                            </table>
                            <div class="d-flex justify-content-center pt-3">
                                <ul class="pagination" id="paginationZonaClientes">
                                    <li class="page-item">
                                        <a class="page-link" href="#" onclick="cambiarPaginaZonaClientes(currentPageZonaClientes - 1)" aria-label="Previous" id="anteriorZonaClientes">
                                            <span aria-hidden="true">&laquo;</span>
                                        </a>
                                    </li>
                                    <li class="page-item">
                                        <a class="page-link" href="#" onclick="cambiarPaginaZonaClientes(currentPageZonaClientes + 1)" aria-label="Next" id="siguienteZonaClientes">
                                            <span aria-hidden="true">&raquo;</span>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                    </div>
                </div>
            </div>
        </div>


        







        </div>
    </main>


