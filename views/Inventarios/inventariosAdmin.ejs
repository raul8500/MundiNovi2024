<% extraStyles=` `; %>


    <main style="margin-top: 20px">
        <div class="container pt-4">
            <h3 class="text-center">Inventarios</h3>
            <div class="tab-content" id="pills-tabContent2">
                <div class="d-flex justify-content-end " style="margin-top: 20px;">

                    <button id="btnAñadirProveedor" type="button" class="btn btn-primary btn-rounded"
                        data-bs-toggle="modal" data-bs-target="#modalActas">
                        Crear Inventario <i class="fa-solid fa-plus" style="color: #ffffff;"></i>
                    </button>


                </div>
                <div class="table-responsive pt-3">
                    <table id="tablaInventarios" class="table align-middle mb-0 bg-white">
                        <thead class="bg-light">
                            <tr class="text-center">
                                <th scope="col">Folio</th>
                                <th scope="col">Sucursal</th>
                                <th scope="col">Encargado</th>
                                <th scope="col">Importe</th>
                                <th scope="col">Fecha</th>
                                <th scope="col">Estado</th>
                                <th scope="col">Acciones</th>
                            </tr>
                        </thead>
                        <tbody class="table-group-divider">
                            <!-- Aquí se cargarán las sucursales -->
                        </tbody>
                    </table>
                </div>



            </div>



            <!-- Modal para Detalles del Inventario -->
            <div class="modal fade" id="modalDetallesInventario" tabindex="-1" aria-labelledby="modalDetallesInventarioLabel"
                aria-hidden="true">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <div id="headerInfo" style="font-size: 0.9rem; color: #555;">
                                <!-- Aquí se mostrará la sucursal y el folio dinámicamente -->
                            </div>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>



                        <div class="modal-body">
                            <input type="text" id="busquedaProductos" class="form-control" placeholder="Buscar producto..." style="width: 250px;">
                            <!-- Tabs -->
                            <ul class="nav nav-tabs" id="inventarioTabs" role="tablist">
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link active" id="tab-inventariado" data-bs-toggle="tab"
                                        data-bs-target="#content-inventariado" type="button" role="tab"
                                        aria-controls="content-inventariado" aria-selected="true">Inventariado</button>
                                </li>
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link" id="tab-no-inventariado" data-bs-toggle="tab"
                                        data-bs-target="#content-no-inventariado" type="button" role="tab"
                                        aria-controls="content-no-inventariado" aria-selected="false">No Inventariado</button>
                                </li>
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link" id="tab-todos" data-bs-toggle="tab" data-bs-target="#content-todos"
                                        type="button" role="tab" aria-controls="content-todos" aria-selected="false">Todos</button>
                                </li>
                            </ul>
                            <div class="tab-content" id="inventarioTabsContent">
                                <!-- Tab Inventariado -->
                                <div class="tab-pane fade show active" id="content-inventariado" role="tabpanel"
                                    aria-labelledby="tab-inventariado">
                                    <div id="productos-inventariado" class="row mt-3">
                                        <!-- Aquí se llenarán los productos inventariados -->
                                    </div>
                                </div>
                                <!-- Tab No Inventariado -->
                                <div class="tab-pane fade" id="content-no-inventariado" role="tabpanel"
                                    aria-labelledby="tab-no-inventariado">
                                    <div id="productos-no-inventariado" class="row mt-3">
                                        <!-- Aquí se llenarán los productos no inventariados -->
                                    </div>
                                </div>
                                <!-- Tab Todos -->
                                <div class="tab-pane fade" id="content-todos" role="tabpanel" aria-labelledby="tab-todos">
                                    <div id="productos-todos" class="row mt-3">
                                        <!-- Aquí se llenarán todos los productos -->
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                        </div>
                    </div>
                </div>
            </div>


    </main>


<% extraScripts=` 
    <script src="js/inventarios/inventarios.js"></script>
`; %>
