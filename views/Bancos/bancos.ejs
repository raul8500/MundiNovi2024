    <main style="margin-top: 20px">
        <div class="container pt-4">
            <h3 class="text-center">Control de Bancos</h3>

            <div class="tab-content" id="pills-tabContent2" style="margin-top: 40px;">
                <div class="row mb-3">
                    <!-- Select de Bancos -->
                    <div class="col-12 col-md-3 mb-3 mb-md-0">
                        <select id="bancoSelect" class="form-select">
                            <option selected disabled>Seleccione un banco</option>
                            <option value="1">Banco A</option>
                            <option value="2">Banco B</option>
                            <option value="3">Banco C</option>
                            <!-- Agregar más bancos según sea necesario -->
                        </select>
                    </div>

                    <!-- Botones -->
                    <div class="col-12 col-md-9">
                        <div class="d-flex justify-content-start gap-2">
                            <button type="button" class="btn btn-primary">Flujo de Efectivo</button>
                            <button type="button" class="btn btn-primary">Transferencias</button>
                            <button type="button" class="btn btn-primary">Agenda de Movimientos</button>
                        </div>
                    </div>
                </div>

                <!-- Tabla de movimientos -->
                <div class="table-responsive">
                    <table class="table table-striped table-bordered">
                        <thead class="table-light">
                            <tr>
                                <th>Fecha</th>
                                <th>Clave Cpto.</th>
                                <th>Descripción</th>
                                <th>Referencia</th>
                                <th>Tipo</th>
                                <th>Cargos</th>
                                <th>Abonos</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Ejemplo de fila de movimiento; se llenará dinámicamente -->
                            <tr>
                                <td>2025-03-01</td>
                                <td>123456</td>
                                <td>Pago de factura</td>
                                <td>ABC123</td>
                                <td>Débito</td>
                                <td>$500.00</td>
                                <td></td>
                            </tr>
                            <tr>
                                <td>2025-03-02</td>
                                <td>789012</td>
                                <td>Depósito de fondos</td>
                                <td>XYZ456</td>
                                <td>Crédito</td>
                                <td></td>
                                <td>$1000.00</td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <!-- Saldos Totales -->
                <div class="mt-4">
                    <p style="font-size: 20pt;"><strong>Saldos Totales:</strong> $500.00</p>
                </div>
            </div>
        </div>
    </main>





