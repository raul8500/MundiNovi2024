<% extraStyles=` `; %>
    
    
    <main style="margin-top: 10px">
        <div class="container pt-4">
            <h3 class="text-center mb-4">
                <i class="fas fa-cash-register text-primary"></i> Arqueo de efectivo
            </h3>
            <div class="card shadow-lg">
                <div class="card-body">
                    <form id="arqueoForm">
                        <!-- Selección de Sucursal -->
                        <div class="mb-3">
                            <label for="sucursalSelect" class="form-label">
                                <i class="fas fa-store text-secondary"></i> Selecciona una sucursal:
                            </label>
                            <select id="sucursalSelect" class="form-select" required>
                                <option value="" selected disabled>-- Selecciona una sucursal --</option>
                                <!-- Opciones dinámicas -->
                                <option value="1">Sucursal Centro</option>
                                <option value="2">Sucursal Norte</option>
                                <option value="3">Sucursal Sur</option>
                            </select>
                        </div>
                        <!-- Input de efectivo en caja -->
                        <div class="mb-3">
                            <label for="efectivoInput" class="form-label">
                                <i class="fas fa-money-bill-wave text-secondary"></i> Efectivo en caja:
                            </label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-dollar-sign"></i></span>
                                <input type="number" id="efectivoInput" class="form-control"
                                    placeholder="Ingresa el efectivo en caja" required min="0">
                            </div>
                        </div>
                        <!-- Botón de enviar -->
                        <div class="d-flex justify-content-center">
                            <button type="submit" class="btn btn-primary btn-sm">
                                <i class="fas fa-paper-plane"></i> Enviar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </main>


<% extraScripts=`
    <script src="js/arqueo/efectivo/arqueoEfectivo.js" ></script>
`; %>



