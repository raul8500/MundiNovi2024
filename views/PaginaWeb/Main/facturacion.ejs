<body>
<header class="header">
    <div class="container-fluid d-flex align-items-center justify-content-between flex-wrap" style="max-width: 1200px; margin: 0 auto;">
      <!-- Logo -->
      <a href="/">
        <img src="img/logoColor.png" alt="Logo" class="logo">
      </a>

      <!-- Botón hamburguesa -->
      <div class="hamburger" onclick="toggleMenu()">
        <span></span>
        <span></span>
        <span></span>
      </div>

      <!-- Menú -->
      <nav class="menu" id="menu">
        <a href="/">Inicio</a>
        <a href="#">Productos</a>
        <a href="/sucursales">Sucursales</a>
        <a href="/facturacion">Facturación</a>

        <!-- Acciones que solo se ven en móvil -->
        <div class="acciones-movil">
          <a href="#" class="icono whatsapp" title="WhatsApp"><i class="fab fa-whatsapp"></i></a>
          <a href="#" class="icono factura" title="Facturación"><i class="fas fa-file-invoice"></i></a>
          <a href="#" class="mi-cuenta">
            <i class="fas fa-user"></i> Mi Cuenta
          </a>
        </div>
      </nav>

      <!-- Acciones visibles solo en escritorio -->
      <div class="acciones">
        <a href="#" class="icono whatsapp" title="WhatsApp"><i class="fab fa-whatsapp"></i></a>
        <a href="#" class="icono factura" title="Facturación"><i class="fas fa-file-invoice"></i></a>
        <a href="#" class="mi-cuenta">
          <i class="fas fa-user"></i> Mi Cuenta
        </a>
      </div>
    </div>
  </header>


  <main style="margin-bottom: 100px; margin-top: 100px;">
  <div class="container-fluid" style="width: 60%;">

    <div class="card mt-5 shadow-lg border-0 overflow-hidden" style="height: 700px; border-radius: 50px;">
      <div class="row g-0 h-100">
        <!-- Login -->
        <div class="col-md-6 d-flex align-items-center justify-content-center p-5" style="background-color: #ffffff;">
          <div style="width: 100%; max-width: 350px;">
            
            <!-- Ícono centrado -->
            <div class="text-center mb-3" style="margin-top: -50px;">
              <img src="img/logoColor.png">
            </div>
            
            <!-- Textos alineados a la izquierda -->
            <h3 class="fw-bold mb-2 text-center" style="color: #000099; font-family:Arial, Helvetica, sans-serif; margin-top: 20px;">INICIAR SESÍON</h3>
            <h5 class="fw-bold mb-4 text-center" style="color: #000099; font-size: 16px;">Favor de llenar los campos para continuar.</h5>

            <!-- Formulario -->
            <form style="margin-top: 40px;">
              <div style="position: relative;" class="mb-3">
                <i class="fa-solid fa-phone" style="position: absolute; top: 50%; left: 16px; transform: translateY(-50%); color: #888; font-size: 20px;"></i>
                <input 
                  type="text" 
                  class="form-control ps-5"
                  placeholder="Teléfono"
                  autocomplete="off" 
                  autocapitalize="off"
                  style="height: 55px; font-size: 18px; border-radius: 12px;"
                >
              </div>
              <div style="position: relative;" class="mb-3 text-start">
                <i class="fa-solid fa-lock" style="position: absolute; top: 50%; left: 16px; transform: translateY(-50%); color: #888; font-size: 20px;"></i>
                <input 
                  type="password" 
                  class="form-control ps-5" 
                  placeholder="Contraseña" 
                  autocomplete="new-password" 
                  autocapitalize="off"
                  style="height: 55px; font-size: 18px; border-radius: 12px;"
                >
              </div>
              <div class="row">
                <div class="col-md-6">
                  <a href="#" class="d-block w-100 text-center fw-bold" style="color: #000099; font-size: 15px;">¿Olvidaste tu contraseña?</a>
                </div>
                <div class="col-md-6">
                  <button type="submit" class="btn btn-primary w-100" style="font-size: 20px; border-radius: 50px; background-color: #000099;">
                    Entrar
                  </button>
                </div>
              </div>
            </form>
          </div>
        </div>



        <div class="col-md-6 position-relative" style="height: 100%;">
          <!-- Imagen de fondo -->
          <div style="
            background-image: url('img/PaginaWeb/fondoBurbujas.jpg');
            background-size: cover;
            background-position: center;
            position: absolute;
            top: 0; left: 0; right: 0; bottom: 0;
            z-index: 1;">
          </div>

          <!-- Filtro morado translúcido -->
          <div style="
            background-color: rgba(84, 53, 238, 0.5); /* morado con 50% de opacidad */
            position: absolute;
            top: 0; left: 0; right: 0; bottom: 0;
            z-index: 2;">
          </div>

          <!-- Contenido visible -->
          <div class="position-absolute bottom-0 start-0 p-4" style="z-index: 3;">
