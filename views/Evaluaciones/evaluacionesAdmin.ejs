</head>

<body>
    <header>
        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg navbar-light bg-body-tertiary">
            <!-- Container wrapper -->
            <div class="container-fluid">
                <!-- Toggle button -->
                <button data-mdb-collapse-init class="navbar-toggler" type="button"
                    data-mdb-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                    <i class="fas fa-bars"></i>
                </button>

                <!-- Collapsible wrapper -->
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <!-- Navbar brand -->
                    <a class="navbar-brand mt-2 mt-lg-0" href="/main">
                        <img src="img/logoColor.png" height="45" alt="MDB Logo" loading="lazy" />
                    </a>
                    <!-- Left links -->
                    <ul id="options" class="navbar-nav me-auto mb-2 mb-lg-0">

                    </ul>
                    <!-- Left links -->
                </div>
                <!-- Collapsible wrapper -->

                <!-- Right elements -->
                <div class="d-flex align-items-center">
                    <!-- Avatar -->

                    <div class="info"
                        style="display: flex; flex-direction: column; align-items: flex-end; margin-right: 10px;">
                        <span id="name" class="name" style="margin-bottom: -5px; font-weight: 600;">Jesus Aguirre</span>
                        <span id="rol" class="job" style="margin-top: 0px;">GGeneral</span>
                    </div>

                    <div class="dropdown">
                        <a data-mdb-dropdown-init class="dropdown-toggle d-flex align-items-center hidden-arrow"
                            href="#" id="navbarDropdownMenuAvatar" role="button" aria-expanded="false">
                            <img id="profilePicture" src="" class="rounded-circle" height="35"
                                alt="Black and White Portrait of a Man" loading="lazy" />
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdownMenuAvatar">
                            <li>
                                <a class="dropdown-item" href="#">Perfil</a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="#">Configuraciones</a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="/logout">Cerrar sesión</a>
                            </li>
                        </ul>
                    </div>
                </div>
                <!-- Right elements -->
            </div>
            <!-- Container wrapper -->
        </nav>
        <!-- Navbar -->
    </header>
    <main style="margin-top: 10px">
        <div class="container pt-4">
            <h3 class="text-center mb-4">Evaluación de sucursal</h3>
    
            <!-- Botón para gestionar parámetros -->
            <div class="d-flex justify-content-end mb-2">
                <button id="gestionarParametrosBtn" class="btn btn-primary">Gestionar Parámetros</button>
            </div>
    
            <div class="table-responsive pt-3">
                <table id="tablaEvaluaciones" class="table align-middle mb-0 bg-white">
                    <thead class="bg-light">
                        <tr class="text-center">
                            <th scope="col">Sucursal</th>
                            <th scope="col">Evaluador</th>
                            <th scope="col">Fecha y hora</th>
                            <th scope="col">Acciones</th>
                        </tr>
                    </thead>
                    <tbody class="table-group-divider">
                        <!-- Aquí se cargarán las evaluaciones -->
                    </tbody>
                </table>
            </div>
        </div>
    
        <!-- Modal para gestionar parámetros -->
        <div class="modal fade" id="modalGestionParametros" tabindex="-1" aria-labelledby="modalGestionParametrosLabel"
            aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="modalGestionParametrosLabel">Gestionar Parámetros de Evaluación</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <!-- Formulario para crear o editar parámetros -->
                        <form id="parametroForm">
                            <input type="hidden" id="parametroId" />
                            <div class="mb-3">
                                <label for="nombreParametro" class="form-label">Nombre del Parámetro</label>
                                <input type="text" id="nombreParametro" class="form-control"
                                    placeholder="Ejemplo: Orden del Piso de Venta" required />
                            </div>
                            <div class="mb-3">
                                <label for="descripcionParametro" class="form-label">Descripción</label>
                                <textarea id="descripcionParametro" class="form-control"
                                    placeholder="Breve descripción del parámetro"></textarea>
                            </div>
                            <button type="submit" class="btn btn-success">Guardar</button>
                        </form>
    
                        <hr />
    
                        <!-- Tabla de parámetros dentro del modal -->
                        <table id="tablaParametros" class="table align-middle mb-0 bg-white">
                            <thead class="bg-light">
                                <tr>
                                    <th>Nombre</th>
                                    <th>Descripción</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Modal para mostrar la evaluación -->
        <div class="modal fade" id="modalVerEvaluacion" tabindex="-1" aria-labelledby="modalVerEvaluacionLabel"
            aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="modalVerEvaluacionLabel">Detalles de la Evaluación</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <!-- Información de la evaluación -->
                        <div id="evaluacionDetalles">
                            <p><strong>Sucursal:</strong> <span id="modalSucursal">Cargando...</span></p>
                            <p><strong>Evaluador:</strong> <span id="modalEvaluador">Cargando...</span></p>
                            <p><strong>Fecha y Hora:</strong> <span id="modalFechaHora">Cargando...</span></p>
                            <hr>
                            <h6>Parámetros de Evaluación</h6>
                            <ul id="modalParametros">
                                <!-- Aquí se llenarán dinámicamente los parámetros -->
                                <li>Cargando parámetros...</li>
                            </ul>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                    </div>
                </div>
            </div>
        </div>

    </main>









    <!-- MDB -->
    <script type="text/javascript"
        src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/7.3.2/mdb.umd.min.js"></script>
